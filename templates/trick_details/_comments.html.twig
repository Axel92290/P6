{% for comment in comments %}
    <div class="mb-3">
        <div class="d-flex align-items-start border border-2 border-dark p-3">
            <div class="d-flex align-items-center justify-content-center flex-shrink-0 rounded-circle border border-2 border-dark me-3"
                 style="min-width: 64px; min-height: 64px;">
                <i class="fa-solid fa-user fa-2x"></i>
            </div>
            <div>
                <h5>{{ comment.getUser().getUsername() }}</h5>
                <p>{{ comment.getContent() }}</p>
            </div>
        </div>
    </div>
{% endfor %}
