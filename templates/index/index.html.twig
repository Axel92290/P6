{% extends 'base.html.twig' %}

{% block title %}Hello IndexController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! ✅</h1>

    This friendly message is coming from:
    <ul>
        <li>Your controller at <code>D:/dev/P6/src/Controller/IndexController.php</code></li>
        <li>Your template at <code>D:/dev/P6/templates/index/index.html.twig</code></li>
    </ul>
</div>

    <script>
        // Cacher tous les tricks par défaut
        document.querySelectorAll('.col.mb-5').forEach(function (col) {
            col.style.display = 'none';
        });

        // Sur les écrans plus grands, afficher les 8 premiers tricks
        if (window.matchMedia('(min-width: 768px)').matches) {
            document.querySelectorAll('.col.mb-5:nth-child(-n+8)').forEach(function (col) {
                col.style.display = 'block';
            });
        }
    </script>
{% endblock %}
