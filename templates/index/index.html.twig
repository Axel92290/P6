{# templates/index/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Snowtricks{% endblock %}

{% block body %}
    <style>


    </style>

    <header class="position-relative vh-100 d-flex flex-column justify-content-center align-items-center text-white"
            style="background: url('{{ asset('assets/pictures/tricks_snow.gif') }}')center center / cover no-repeat;">
        <div class="bg-dark bg-opacity-50 p-4 rounded text-center">
            <h1 class="fw-bolder">
                Bienvenue {{ app.user ? app.user.username : 'visiteur' }}
            </h1>
            <p class="lead">
                SnowTricks : déchaînez votre créativité sur la poudreuse !
            </p>
            <a href="#tricksContainer" class="btn btn-outline-light mt-3">
                Voir les tricks ↓
            </a>
        </div>
    </header>


    <div class="container position-relative px-4 px-lg-5">
        <section class="py-5">
            <div class="text-center">


            </div>

        </section>
        <!-- Section-->
        <section class="py-5">
            {% if app.user %}
                <div class="text-center">
                    <a href="{{ path('app_trick_create') }}" class="btn btn-primary">Créer un Trick</a>
                </div>
            {% endif %}

            <div class="container px-4 px-lg-5 mt-5">
                <div id="tricksContainer" class="row gx-4 gx-lg-5 row-cols-1 row-cols-md-3 row-cols-xl-4">
                    {% include 'index/_tricks.html.twig' %}
                </div>
            </div>
            <div class="text-center">
                <button id="loadMoreBtn" class="btn btn-outline-primary">Load More</button>
            </div>
        </section>

        <button id="scrollTopBtn" class="btn btn-secondary position-fixed bottom-0 end-0 m-4 d-none"
                title="Remonter en haut">
            <i class="fa-solid fa-arrow-up"></i>
        </button>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const container   = document.getElementById('tricksContainer');
            const scrollBtn   = document.getElementById('scrollTopBtn');
            const loadMoreBtn = document.getElementById('loadMoreBtn');

            // Si ta page 1 est déjà affichée au chargement :
            let page = 2;
            let loading = false;

            function toggleScrollBtn() {
                if (!container || !scrollBtn) return;
                const count = container.querySelectorAll('.card').length;
                scrollBtn.classList.toggle('d-none', count < 15);
            }

            async function loadMore() {
                if (loading) return;
                loading = true;
                try {
                    const res  = await fetch(`/load-more-tricks?page=${page}`, {headers: {'X-Requested-With':'XMLHttpRequest'}});
                    const data = await res.json();


                    if (!data.html || data.html.trim() === '') {
                        loadMoreBtn.classList.add('d-none');
                        return;
                    }

                    container.insertAdjacentHTML('beforeend', data.html);
                    page++;
                    toggleScrollBtn();
                } catch (e) {
                    console.error(e);
                } finally {
                    loading = false;
                }
            }

            if (loadMoreBtn && !loadMoreBtn.dataset.bound) {
                loadMoreBtn.addEventListener('click', loadMore);
                loadMoreBtn.dataset.bound = '1';
            }

            if (scrollBtn) {
                scrollBtn.addEventListener('click', () => window.scrollTo({ top: 0, behavior: 'smooth' }));
            }

            toggleScrollBtn();
        });
    </script>



{% endblock %}

