{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center mb-5">Reset Password</h1>
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-4">
                {% for flash_error in app.flashes('reset_password_error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}

                {{ form_start(requestForm, {'attr': {'class': 'border border-2 border-dark p-4'}}) }}

                <div class="mb-3">
                    {{ form_label(requestForm.email, 'Email Address', {'label_attr': {'class': 'form-label d-block text-center'}}) }}
                    {{ form_widget(requestForm.email, {'attr': {'class': 'form-control border-0 border-bottom border-dark rounded-0', 'id': 'email'}}) }}
                    {{ form_errors(requestForm.email, {'attr': {'class': 'text-danger'}}) }}
                </div>


                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-outline-dark">Send password reset email</button>
                </div>

                {{ form_end(requestForm) }}
            </div>
        </div>
    </div>
{% endblock %}

